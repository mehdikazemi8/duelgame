<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="statistics_captions">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/fontsize.normal</item>
    </style>

    <style name="statistics_captions_game_result">
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">@dimen/fontsize.normal</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="edit_text_bordered">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/edit_text_border</item>
        <item name="android:gravity">center|right</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="spinner_default_style" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/edit_text_border</item>
        <item name="android:gravity">center|right</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textColor">#7F7F7F</item>
    </style>

    <style name="button_home_recharge">
        <item name="android:layout_gravity">center</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:text">M</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/background_1</item>
        <item name="android:textSize">@dimen/fontsize.small</item>
    </style>

    <style name="button_ranking_sub">
        <item name="android:layout_gravity">center</item>
        <item name="android:minHeight">10dp</item>
        <item name="android:background">@drawable/buy_button_enabled</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/fontsize.small</item>
    </style>


    <style name="button_game_result_footer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_weight">4</item>
        <item name="android:background">@drawable/buy_button</item>
        <item name="android:minHeight">5dp</item>
        <item name="android:minWidth">5dp</item>
        <item name="android:padding">3dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tick_cross_game_play">
        <item name="android:layout_height">12dp</item>
        <item name="android:layout_width">12dp</item>
        <item name="android:visibility">invisible</item>
        <item name="android:src">@drawable/tick</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="home_buttons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:background">@drawable/buy_button</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/fontsize.large</item>
    </style>

    <style name="quiz_info_different_buttons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@drawable/buy_button</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:visibility">gone</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="course_result_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="template_offline_duel_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingLeft">@dimen/avatar_padding</item>
        <item name="android:paddingRight">@dimen/avatar_padding</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="duel_offline_menu_buttons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/purple_dark</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24dp</item>
    </style>

    <style name="quiz_activity_menu_buttons">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/purple_dark</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">24dp</item>
    </style>

</resources>