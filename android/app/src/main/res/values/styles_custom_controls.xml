<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="statistics_captions">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="edit_text_bordered">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/edit_text_border</item>
        <item name="android:gravity">center|right</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="spinner_default_style" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:background">@drawable/edit_text_border</item>
        <item name="android:gravity">center|right</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textColor">#7F7F7F</item>
    </style>

    <style name="button_home_recharge">
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/buy_button</item>
        <item name="android:minHeight">10dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingLeft">7dp</item>
        <item name="android:paddingRight">7dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/fontsize.small</item>
    </style>

    <style name="button_ranking_sub">
        <item name="android:layout_gravity">center</item>
        <item name="android:minHeight">10dp</item>
        <item name="android:background">@drawable/buy_button_enabled</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/fontsize.small</item>
    </style>


    <style name="button_game_result_footer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_weight">4</item>
        <item name="android:background">@drawable/buy_button</item>
        <item name="android:minHeight">5dp</item>
        <item name="android:minWidth">5dp</item>
        <item name="android:padding">3dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>