<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                android:angle="180"
                android:centerColor="@color/play_game_bar_background"
                android:centerY="0.75"
                android:endColor="@color/play_game_bar_background"
                android:startColor="@color/play_game_bar_background" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip
            android:clipOrientation="vertical"
            android:gravity="bottom">
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:angle="180"
                    android:centerColor="#80ffb600"
                    android:centerY="0.75"
                    android:endColor="#a0ffcb00"
                    android:startColor="#80ffd300" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip
            android:clipOrientation="vertical"
            android:gravity="bottom">
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:angle="180"
                    android:centerColor="@color/play_game_bar_foreground"
                    android:centerY="0.75"
                    android:endColor="@color/play_game_bar_foreground"
                    android:startColor="@color/play_game_bar_foreground" />
            </shape>
        </clip>
    </item>
</layer-list>