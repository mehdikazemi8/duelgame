<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/category_background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".StartActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_height="0dp">
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:onClick="showRanking"
                android:contentDescription="10001"
                android:text="رده بندی"
                android:layout_height="match_parent" />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Duel2"
                android:layout_height="match_parent" />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:contentDescription="10001"
                android:onClick="letsPlay"
                android:text="Duel1"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/adabiat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/adabiat" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_height="0dp">
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:onClick="showRanking"
                android:contentDescription="10002"
                android:text="رده بندی"
                android:layout_height="match_parent" />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Duel2"
                android:layout_height="match_parent" />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:contentDescription="10002"
                android:onClick="letsPlay"
                android:text="Duel1"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/arabi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:src="@drawable/arabi" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_height="0dp">
            <Button
                android:layout_width="0dp"
                android:text="رده بندی"
                android:layout_weight="1"
                android:onClick="showRanking"
                android:contentDescription="10003"
                android:layout_height="match_parent" />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Duel2"
                android:layout_height="match_parent" />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:contentDescription="10003"
                android:onClick="letsPlay"
                android:text="Duel1"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/din_o_zendegi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:src="@drawable/din_o_zendegi" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_height="0dp">
            <Button
                android:layout_width="0dp"
                android:text="رده بندی"
                android:layout_weight="1"
                android:onClick="showRanking"
                android:contentDescription="10004"
                android:layout_height="match_parent" />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="Duel2"
                android:layout_height="match_parent" />
            <Button
                android:layout_width="0dp"
                android:contentDescription="10004"
                android:onClick="letsPlay"
                android:layout_weight="1"
                android:text="Duel1"
                android:layout_height="match_parent" />
            <ImageView
                android:id="@+id/zaban_englisi"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:src="@drawable/zaban_englisi" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
