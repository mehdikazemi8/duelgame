<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_2"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/adabiat"
                style="@style/category_option"
                android:background="@drawable/edge_shadow_background_one"
                android:contentDescription="0">

                <TextView
                    android:id="@+id/adabiat_level"
                    style="@style/category_option_course_level"
                    android:text="level 5" />

                <TextView
                    android:id="@+id/adabiat_title"
                    style="@style/category_option_course_title"
                    android:text="ادبیات" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/fragment_holder_adabiat"
                style="@style/category_option_fragment"></FrameLayout>

            <LinearLayout
                android:id="@+id/arabi"
                style="@style/category_option"
                android:background="@drawable/edge_shadow_background_two"
                android:contentDescription="1">

                <TextView
                    android:id="@+id/arabi_level"
                    style="@style/category_option_course_level"
                    android:text="level 5" />

                <TextView
                    android:id="@+id/arabi_title"
                    style="@style/category_option_course_title"
                    android:text="عربی" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/fragment_holder_arabi"
                style="@style/category_option_fragment" />

            <LinearLayout
                android:id="@+id/din_o_zendegi"
                style="@style/category_option"
                android:background="@drawable/edge_shadow_background_one"
                android:contentDescription="2">

                <TextView
                    android:id="@+id/din_o_zendegi_level"
                    style="@style/category_option_course_level"
                    android:text="level 5" />

                <TextView
                    android:id="@+id/din_o_zendegi_title"
                    style="@style/category_option_course_title"
                    android:text="دین و زندگی" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/fragment_holder_din_o_zendegi"
                style="@style/category_option_fragment" />

            <LinearLayout
                android:id="@+id/zaban_englisi"
                style="@style/category_option"
                android:background="@drawable/edge_shadow_background_two"
                android:contentDescription="3">

                <TextView
                    android:id="@+id/zaban_englisi_level"
                    style="@style/category_option_course_level"
                    android:text="level 5" />

                <TextView
                    android:id="@+id/zaban_englisi_title"
                    style="@style/category_option_course_title"
                    android:text="انگلیسی" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/fragment_holder_zaban_englisi"
                style="@style/category_option_fragment" />

            <LinearLayout
                android:id="@+id/shimi"
                style="@style/category_option"
                android:background="@drawable/edge_shadow_background_one"
                android:contentDescription="4">

                <TextView
                    android:id="@+id/shimi_level"
                    style="@style/category_option_course_level"
                    android:text="level 5" />

                <TextView
                    android:id="@+id/shimi_title"
                    style="@style/category_option_course_title"
                    android:text="شیمی" />
            </LinearLayout>

            <FrameLayout
                android:id="@+id/fragment_holder_shimi"
                style="@style/category_option_fragment" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
