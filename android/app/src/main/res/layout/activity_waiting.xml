<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartActivity">

    <TextView
        android:id="@+id/waiting_separator"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerVertical="true" />

    <LinearLayout
        android:id="@+id/waiting_player_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/waiting_separator"
        android:background="@android:color/holo_orange_light"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="invisible">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="vertical">

            <TextView
                android:id="@+id/waiting_my_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="right"
                android:padding="5dp"
                android:text="دیپلم" />

            <TextView
                android:id="@+id/waiting_my_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/waiting_my_level"
                android:gravity="right"
                android:padding="5dp"
                android:text="اسم" />

            <TextView
                android:id="@+id/waiting_my_ostan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/waiting_my_level"
                android:gravity="right"
                android:padding="5dp"
                android:text="استان" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/waiting_my_avatar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:padding="5dp"
            android:src="@drawable/av1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/waiting_opponent_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/waiting_separator"
        android:background="@android:color/holo_blue_light"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/waiting_opponent_avatar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:padding="5dp"
            android:src="@drawable/av5" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/waiting_opponent_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="left"
                android:padding="5dp"
                android:text="دیپلم" />

            <TextView
                android:id="@+id/waiting_opponent_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@id/waiting_opponent_level"
                android:gravity="left"
                android:padding="5dp"
                android:text="اسم" />

            <TextView
                android:id="@+id/waiting_opponent_ostan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/waiting_opponent_level"
                android:gravity="left"
                android:padding="5dp"
                android:text="استان" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2" />

    </LinearLayout>

    <TextView
        android:id="@+id/waiting_against"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@android:color/holo_red_light"
        android:padding="10dp"
        android:text="در مقابل"
        android:textColor="@android:color/white" />


</RelativeLayout>
