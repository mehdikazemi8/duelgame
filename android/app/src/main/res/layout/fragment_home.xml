<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background_1"
        android:padding="@dimen/space.medium">

        <LinearLayout
            android:id="@+id/rankings_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/space.medium">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/space.long">

                <ImageButton
                    android:id="@+id/info_button"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/space.long"
                    android:layout_marginRight="@dimen/space.long"
                    android:background="@drawable/info" />

                <com.mehdiii.duelgame.views.custom.CustomTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="امتیاز کل"
                    android:textColor="@color/purple_dark"
                    android:textSize="@dimen/fontsize.normal" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/c10001_holder"
                    style="@style/home_ranking">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.mehdiii.duelgame.views.custom.CustomTextView
                            style="@style/home_ranking_text"
                            android:text="ادبیات"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.mehdiii.duelgame.views.custom.CustomTextView
                            android:id="@+id/c10001_score"
                            style="@style/home_ranking_text"
                            android:text="۰" />

                        <com.mehdiii.duelgame.views.custom.CustomTextView
                            style="@style/home_ranking_text"
                            android:text="امتیاز: " />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.mehdiii.duelgame.views.custom.CustomTextView
                            android:id="@+id/c10001_rank"
                            style="@style/home_ranking_text"
                            android:text="۱" />

                        <com.mehdiii.duelgame.views.custom.CustomTextView
                            style="@style/home_ranking_text"
                            android:text="رتبه: " />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/background_1" />

                <LinearLayout
                    android:id="@+id/c10002_holder"
                    style="@style/home_ranking">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.mehdiii.duelgame.views.custom.CustomTextView
                            style="@style/home_ranking_text"
                            android:text="عربی"
                            android:textSize="20dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.mehdiii.duelgame.views.custom.CustomTextView
                            android:id="@+id/c10002_score"
                            style="@style/home_ranking_text"
                            android:text="۰" />

                        <com.mehdiii.duelgame.views.custom.CustomTextView
                            style="@style/home_ranking_text"
                            android:text="امتیاز: " />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.mehdiii.duelgame.views.custom.CustomTextView
                            android:id="@+id/c10002_rank"
                            style="@style/home_ranking_text"
                            android:text="۱" />

                        <com.mehdiii.duelgame.views.custom.CustomTextView
                            style="@style/home_ranking_text"
                            android:text="رتبه: " />

                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/background_1" />

                <LinearLayout
                    android:id="@+id/c10003_holder"
                    style="@style/home_ranking">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.mehdiii.duelgame.views.custom.CustomTextView
                            style="@style/home_ranking_text"
                            android:text="دین و زندگی"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.mehdiii.duelgame.views.custom.CustomTextView
                            android:id="@+id/c10003_score"
                            style="@style/home_ranking_text"
                            android:text="۰" />

                        <com.mehdiii.duelgame.views.custom.CustomTextView
                            style="@style/home_ranking_text"
                            android:text="امتیاز: " />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.mehdiii.duelgame.views.custom.CustomTextView
                            android:id="@+id/c10003_rank"
                            style="@style/home_ranking_text"
                            android:text="۱" />

                        <com.mehdiii.duelgame.views.custom.CustomTextView
                            style="@style/home_ranking_text"
                            android:text="رتبه: " />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/background_1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:visibility="gone">

                <LinearLayout
                    android:id="@+id/c10004_holder"
                    style="@style/home_ranking">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.mehdiii.duelgame.views.custom.CustomTextView
                            style="@style/home_ranking_text"
                            android:text="زبان"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.mehdiii.duelgame.views.custom.CustomTextView
                            android:id="@+id/c10004_score"
                            style="@style/home_ranking_text"
                            android:text="۰" />

                        <com.mehdiii.duelgame.views.custom.CustomTextView
                            style="@style/home_ranking_text"
                            android:text="امتیاز: " />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.mehdiii.duelgame.views.custom.CustomTextView
                            android:id="@+id/c10004_rank"
                            style="@style/home_ranking_text"
                            android:text="۱" />

                        <com.mehdiii.duelgame.views.custom.CustomTextView
                            style="@style/home_ranking_text"
                            android:text="رتبه: " />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/background_1" />

                <LinearLayout
                    android:id="@+id/c10005_holder"
                    style="@style/home_ranking">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.mehdiii.duelgame.views.custom.CustomTextView
                            style="@style/home_ranking_text"
                            android:text="شیمی"
                            android:textSize="20dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.mehdiii.duelgame.views.custom.CustomTextView
                            android:id="@+id/c10005_score"
                            style="@style/home_ranking_text"
                            android:text="۰" />

                        <com.mehdiii.duelgame.views.custom.CustomTextView
                            style="@style/home_ranking_text"
                            android:text="امتیاز: " />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.mehdiii.duelgame.views.custom.CustomTextView
                            android:id="@+id/c10005_rank"
                            style="@style/home_ranking_text"
                            android:text="۱" />

                        <com.mehdiii.duelgame.views.custom.CustomTextView
                            style="@style/home_ranking_text"
                            android:text="رتبه: " />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/background_1" />

                <LinearLayout
                    android:id="@+id/c10006_holder"
                    style="@style/home_ranking">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.mehdiii.duelgame.views.custom.CustomTextView
                            style="@style/home_ranking_text"
                            android:text="زیست"
                            android:textSize="20dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.mehdiii.duelgame.views.custom.CustomTextView
                            android:id="@+id/c10006_score"
                            style="@style/home_ranking_text"
                            android:text="۰" />

                        <com.mehdiii.duelgame.views.custom.CustomTextView
                            style="@style/home_ranking_text"
                            android:text="امتیاز: " />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.mehdiii.duelgame.views.custom.CustomTextView
                            android:id="@+id/c10006_rank"
                            style="@style/home_ranking_text"
                            android:text="۱" />

                        <com.mehdiii.duelgame.views.custom.CustomTextView
                            style="@style/home_ranking_text"
                            android:text="رتبه: " />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:layout_gravity="start|center_vertical"
                                android:adjustViewBounds="true"
                                android:src="@drawable/diamond" />

                            <TextView
                                android:id="@+id/home_diamond_cnt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:layout_marginRight="3dp"
                                android:gravity="center_vertical"
                                android:text="20"
                                android:textColor="@color/purple_dark"
                                android:textSize="20sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <Button
                                android:id="@+id/button_buy_diamond"
                                style="@style/button_home_recharge" />
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="10:10"
                            android:textColor="@color/purple_dark"
                            android:textSize="@dimen/fontsize.normal"
                            android:visibility="invisible" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="130dp"
                    android:layout_weight="3"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/imageView_avatar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:contentDescription="avatar"
                        android:onClick="viewLevels"
                        android:src="@drawable/av1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout
                            android:id="@+id/container_hearts"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView_hearts"
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:layout_gravity="start|center_vertical"
                                android:adjustViewBounds="true"
                                android:src="@drawable/heart_full" />

                            <TextView
                                android:id="@+id/textView_heart"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:layout_marginLeft="3dp"
                                android:gravity="center_vertical"
                                android:textColor="@color/purple_dark"
                                android:textSize="20sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <Button
                                android:id="@+id/button_refill"
                                style="@style/button_home_recharge" />

                        </LinearLayout>

                        <TextView
                            android:id="@+id/textView_counter"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:textColor="@color/purple_dark"
                            android:textSize="@dimen/fontsize.small" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/textView_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:onClick="viewLevels"
                android:text="دیپلم"
                android:textColor="@color/purple_dark"
                android:textSize="@dimen/fontsize.normal"
                android:visibility="gone" />

        </LinearLayout>

        <com.github.mikephil.charting.charts.RadarChart
            android:id="@+id/chart1"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/chart1"
            android:layout_marginTop="10dp"

            >

            <LinearLayout
                android:id="@+id/firstline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1">

                    <com.mehdiii.duelgame.views.custom.CustomButton
                        android:id="@+id/quiz_button"
                        style="@style/home_buttons"


                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="آزمون" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginRight="12dp"
                        android:background="@drawable/round_background"
                        android:elevation="2dp">

                        <com.mehdiii.duelgame.views.custom.CustomTextView
                            android:id="@+id/open_exams_not_taken"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:text="0"
                            android:textColor="@color/purple_dark"
                            android:textSize="@dimen/fontsize.small" />
                    </LinearLayout>
                </FrameLayout>

                <com.mehdiii.duelgame.views.custom.CustomButton
                    android:id="@+id/step_quiz"
                    style="@style/home_buttons"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/course_to_course" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/thirdline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/firstline"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone"
                android:paddingTop="5dp">

                <Button
                    android:id="@+id/button_duel2"
                    style="@style/home_buttons"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="5dp"
                    android:text="دوئل" />

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/button_offline_duels_lists"
                        style="@style/home_buttons"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:text="دوئل نوبتی" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/round_background"
                        android:elevation="2dp">

                        <com.mehdiii.duelgame.views.custom.CustomTextView
                            android:id="@+id/pending_offline_duels"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:text="0"
                            android:textColor="@color/purple_dark"
                            android:textSize="@dimen/fontsize.small" />
                    </LinearLayout>
                </FrameLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/thirdline"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingTop="5dp">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1">
                    <Button
                        android:id="@+id/button_flash_card"
                        style="@style/home_buttons"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="فلش کارت" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|right"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/round_background"
                        android:elevation="2dp">

                        <com.mehdiii.duelgame.views.custom.CustomTextView
                            android:id="@+id/pending_flashcards"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:text="0"
                            android:textColor="@color/purple_dark"
                            android:textSize="@dimen/fontsize.small" />
                    </LinearLayout>
                </FrameLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"

                android:gravity="center"
                android:orientation="vertical">

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>