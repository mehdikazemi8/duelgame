<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFEFE"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".StartActivity">

    <LinearLayout
        android:id="@+id/game_result_whole_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:orientation="vertical">

        <TextView
            android:id="@+id/game_result_status"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="تو بردی"
            android:textSize="25sp"
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:clipChildren="false"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2" />

            <RelativeLayout
                android:id="@+id/game_result_alaki_layout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:clipChildren="false">

                <TextView
                    android:id="@+id/game_result_divider_line_left"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_centerVertical="true" />

                <ImageView
                    android:id="@+id/game_result_opponent_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@id/game_result_divider_line_left"
                    android:src="@drawable/av8"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/game_result_opponent_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/game_result_divider_line_left"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="mehdiiiiii" />

                <TextView
                    android:id="@+id/game_result_opponent_points"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/game_result_opponent_name"
                    android:gravity="center"
                    android:text="7" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"></LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:clipChildren="false">

                <TextView
                    android:id="@+id/game_result_divider_line_right"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_centerVertical="true" />

                <ImageView
                    android:id="@+id/game_result_user_avatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_above="@id/game_result_divider_line_right"
                    android:src="@drawable/av7"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/game_result_user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/game_result_divider_line_right"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:text="mehdiiiiii" />

                <TextView
                    android:id="@+id/game_result_player_points"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/game_result_user_name"
                    android:gravity="center"
                    android:text="17" />

            </RelativeLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="start"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/game_result_t7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_horizontal"
                    android:minHeight="1dp"
                    android:text="کل"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/game_result_t8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/game_result_t7"
                    android:gravity="center_horizontal"
                    android:minHeight="1dp"
                    android:text="امتیاز"
                    android:visibility="invisible" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/game_result_t5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_horizontal"
                    android:minHeight="1dp"
                    android:text="امتیاز"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/game_result_t6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/game_result_t5"
                    android:gravity="center_horizontal"
                    android:minHeight="1dp"
                    android:text="ضریب"
                    android:visibility="invisible" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/game_result_t3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_horizontal"
                    android:minHeight="1dp"
                    android:text="برد"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/game_result_t4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/game_result_t3"
                    android:gravity="center_horizontal"
                    android:minHeight="1dp"
                    android:text="جایزه"
                    android:visibility="invisible" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/game_result_t1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center_horizontal"
                    android:minHeight="1dp"
                    android:text="مثبت"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/game_result_t2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/game_result_t1"
                    android:gravity="center_horizontal"
                    android:minHeight="1dp"
                    android:text="امتیاز"
                    android:visibility="invisible" />
            </RelativeLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="top"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/game_result_total_experience"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/game_result_text_view_background"
                android:gravity="center"
                android:minHeight="10dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="+20"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/game_result_point_factor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/game_result_text_view_background"
                android:gravity="center"
                android:minHeight="10dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="+20"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/game_result_win_bonus"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/game_result_text_view_background"
                android:gravity="center"
                android:minHeight="10dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="+20"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/game_result_positive_points"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:layout_weight="1"
                android:background="@drawable/game_result_text_view_background"
                android:gravity="center"
                android:minHeight="10dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="+20"
                android:visibility="invisible" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/game_result_level_star"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:src="@drawable/star" />

            <ProgressBar
                android:id="@+id/game_result_level_progress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="4"
                android:max="100"
                android:progress="20"
                android:progressDrawable="@drawable/my_progress_bar" />

            <TextView
                android:id="@+id/game_result_level_text"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:text="1" />

            <TextView
                android:id="@+id/game_result_diamond_cnt"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="2"
                android:gravity="center|right"
                android:padding="5dp"
                android:text="20" />

            <ImageView
                android:id="@+id/game_result_diamond_picture"
                android:layout_width="0dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:src="@drawable/diamond" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4">

            <Button
                android:id="@+id/game_result_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:background="@drawable/result_button_report"
                android:minHeight="1dp"
                android:padding="3dp"
                android:text="گزارش خطا"
                android:textColor="@android:color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/game_result_report"
                android:layout_centerVertical="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/game_result_duel_others"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="4"
                    android:background="@drawable/result_buttons"
                    android:minHeight="5dp"
                    android:minWidth="5dp"
                    android:padding="3dp"
                    android:text="دوئل"
                    android:textColor="@android:color/white" />

                <Button
                    android:id="@+id/game_result_add_friend"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="4"
                    android:background="@drawable/result_buttons"
                    android:minHeight="5dp"
                    android:minWidth="5dp"
                    android:padding="3dp"
                    android:text="افزودن به دوستان"
                    android:textColor="@android:color/white" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
