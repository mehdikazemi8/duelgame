<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_1"
    android:focusableInTouchMode="true"
    android:padding="10dp"
    android:scrollbars="none">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageView_hearts"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_gravity="start|center_vertical"
                android:adjustViewBounds="true"
                android:layout_weight="1"
                android:src="@drawable/heart_full" />
            <TextView
                android:id="@+id/header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="@string/add_question_header"
                android:textSize="20dp" />

        </LinearLayout>
        <EditText
            android:id="@+id/question_text"
            style="@style/edit_text_bordered"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="@dimen/space.long"
            android:hint="سوال"
            android:singleLine="true" />
        <EditText
            android:id="@+id/answer_text"
            style="@style/edit_text_bordered"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space.long"
            android:hint="جواب"
            android:maxLength="100"
            android:singleLine="true" />
        <EditText
            android:id="@+id/option_2"
            style="@style/edit_text_bordered"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space.long"
            android:hint="گزینه ۲"
            android:maxLength="100"
            android:singleLine="true" />
        <EditText
            android:id="@+id/option_3"
            style="@style/edit_text_bordered"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space.long"
            android:hint="گزینه ۳"
            android:maxLength="100"
            android:singleLine="true" />
        <EditText
            android:id="@+id/option_4"
            style="@style/edit_text_bordered"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space.long"
            android:hint="گزینه ۴"
            android:maxLength="100"
            android:singleLine="true" />
        <EditText
            android:id="@+id/description"
            style="@style/edit_text_bordered"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="@dimen/space.long"
            android:hint="پاسخ تشریحی"
            android:maxLength="450"
            android:singleLine="true" />
        <Spinner
            android:id="@+id/course_name"
            style="@style/spinner_default_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space.short"
            android:entries="@array/courses"
            android:textSize="25sp" />
        <Spinner
            android:id="@+id/chapter"
            style="@style/spinner_default_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space.short"
            android:entries="@array/chapters"
            android:textSize="25sp" />
        <Button
            android:id="@+id/button_send"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space.long"
            android:background="@drawable/bg_button_indian_red"
            android:text="ارسال"
            android:textColor="@color/white"
            android:textSize="@dimen/fontsize.large" />
    </LinearLayout>
</ScrollView>